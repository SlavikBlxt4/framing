package com.example.demo.utils;

import java.util.Date;
import java.util.List;
import java.util.Map;

public class Availability {
    private Map<String, List<String>> days;
    private List<ExceptionDate> exceptions;

    public Availability() {
    }

    public static class ExceptionDate {
        private Date date;
        private List<String> times;
        private Boolean closed; 

        public ExceptionDate() {
        }

        public Date getDate() {
            return date;
        }

        public void setDate(Date date) {
            this.date = date;
        }

        public List<String> getTimes() {
            return times;
        }

        public void setTimes(List<String> times) {
            this.times = times;
        }

        public Boolean getClosed() {
            return closed;
        }

        public void setClosed(Boolean closed) {
            this.closed = closed;
        }
    }

    public Map<String, List<String>> getDays() {
        return days;
    }

    public void setDays(Map<String, List<String>> days) {
        this.days = days;
    }

    public List<ExceptionDate> getExceptions() {
        return exceptions;
    }

    public void setExceptions(List<ExceptionDate> exceptions) {
        this.exceptions = exceptions;
    }
}
